{
    "compilerOptions": {
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "moduleResolution": "node",
        "module": "commonjs",
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "sourceMap": true,
        "target": "es2017",
        "outDir": "dist"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}